<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stopwatch_background"
    android:padding="16dp"
    tools:context=".ui.stopwatch.StopwatchFragment">

    <TextView
        android:id="@+id/text_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:text="00:00.00"
        android:textAlignment="center"
        android:textColor="@color/stopwatch_time_text"
        android:textSize="48sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttons_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_time"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_start_pause"
            style="@style/StopwatchButton.Primary"
            android:layout_width="140dp"
            android:layout_height="@dimen/stopwatch_button_height"
            android:layout_marginBottom="16dp"
            android:text="START"
            android:textSize="@dimen/stopwatch_button_text_size" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_reset"
            style="@style/StopwatchButton.Secondary"
            android:layout_width="140dp"
            android:layout_height="@dimen/stopwatch_button_height"
            android:text="RESET"
            android:textSize="@dimen/stopwatch_button_text_size" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
