<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stopwatch_background"
    android:padding="16dp"
    tools:context=".ui.stopwatch.StopwatchFragment">

    <TextView
        android:id="@+id/text_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="00:00.00"
        android:textAlignment="center"
        android:textColor="@color/stopwatch_time_text"
        android:textSize="@dimen/stopwatch_time_text_size"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:elevation="8dp"
        android:shadowColor="@color/stopwatch_time_text_shadow"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintBottom_toTopOf="@+id/buttons_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/recycler_laps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_time">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_start_pause"
            style="@style/StopwatchButton.Primary"
            android:layout_width="0dp"
            android:layout_height="@dimen/stopwatch_button_height"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="START"
            android:textSize="@dimen/stopwatch_button_text_size" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_lap"
            style="@style/StopwatchButton.Secondary"
            android:layout_width="0dp"
            android:layout_height="@dimen/stopwatch_button_height"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:text="LAP"
            android:textSize="@dimen/stopwatch_button_text_size" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_reset"
            style="@style/StopwatchButton.Secondary"
            android:layout_width="0dp"
            android:layout_height="@dimen/stopwatch_button_height"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="RESET"
            android:textSize="@dimen/stopwatch_button_text_size" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_laps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/lap_list_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttons_container" />

</androidx.constraintlayout.widget.ConstraintLayout>
